@{ 
    @*int rowNum = 1;*@
}
@model List<CodingEvents.Models.Event>


<h1>Coding Events</h1>

<p> <a asp-controller="Events" asp-action="Add">Add Events</a></p>
<p><a  asp-controller="Events" asp-action="Delete">Delete</a></p>


@if (Model.Count == 0)
{
   <p>No Events</p>
}



<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Event Name</th>
            <th scope="col">Event Description</th>
            <th scope="col">Contact Email</th>
            <th scope="col">Location</th>
            <th scope="col">Number of Attendees</th>
            <th scope="col">Registration Required?</th>
            <th scope="col">Category</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var meeting in Model)
        {
        <tr>


            @*<th scope="row">@rowNum</th>*@
            <td>@meeting.Id</td>
            <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@meeting.Id">@meeting.Name</a></td>
            <td>@meeting.Description</td>
            <td>@meeting.ContactEmail</td>
            <td>@meeting.Location</td>
            <td>@meeting.Attendees</td>
            <td>@meeting.RegistrationRequired</td>
            <td>@meeting.Category.Name</td>

            <td><a href="/Events/Edit/@meeting.Id">Edit Event</a> @*<a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a>*@</td>



        </tr>
            @*rowNum++;*@
        }
        
    </tbody>
</table>
 