
@model CodingEvents.ViewModles.AddEventViewModel;

 


<h1>Add Events</h1>

<form method="post" action="">
    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Name">Enter the name of an event.</label>
        <input asp-for="Name" type="text" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Enter a description of the event.</label>
        <input asp-for="Description" type="text" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactEmail">Enter an email address.</label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>


    <div class="form-group">
        <label asp-for="Location">Enter a location for the event.</label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>


    <div class="form-group">
        <label asp-for="Attendees">Enter number of attendees.</label>
        <input asp-for="Attendees" />
        <span asp-validation-for="Attendees"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationRequired">Is registration required for this event?</label>
        <input asp-for="RegistrationRequired" />
        <span asp-validation-for="RegistrationRequired"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Event Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories">




        </select>

    </div>

    <input type="submit" value="Add Event" />


</form>
